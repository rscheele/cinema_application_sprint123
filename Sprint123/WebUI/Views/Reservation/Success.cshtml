@model WebUI.Models.Reservation

@{
    ViewBag.Title = "Success";
}
<body>
    <div class="form-horizontal">
        <br />
        <br />
        <h1><b>De bestelling is geslaagd!</b></h1><br />
        <b>Check je mailbox voor je reserveringscode.</b><br /><br />
