@model IEnumerable<Domain.Entities.Show>

@{
    ViewBag.Title = "Overzicht films";
}

<h2>Verwacht:</h2>
<div class="align-content-center">
    <div id="verwachtefilms" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Content/pacific-rim-small.png" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Pacific Rim - Uprising</h5>
                    <p>De nieuwe spectaculaire 3D-actiefilm PACIFIC RIM UPRISING.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/pacific-rim-small.png" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Pacific Rim - Uprising</h5>
                    <p>De nieuwe spectaculaire 3D-actiefilm PACIFIC RIM UPRISING.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/pacific-rim-small.png" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Pacific Rim - Uprising</h5>
                    <p>De nieuwe spectaculaire 3D-actiefilm PACIFIC RIM UPRISING.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<h2>Deze Week in de bioscoop:</h2>
@using (Html.BeginForm())
{
<p>
    Zoek film op naam: @Html.TextBox("SearchString")
    <input type="submit" class="btn btn-success" value="Search" />
</p>    
}
<table class="table">
    <tr>
        <th>
            <!--Image-->
        </th>
        <th>
            <p>Naam film:</p>
        </th>
        <th>
            <p>3D:</p>
        </th>
        <th>
            <p>Taal:</p>
        </th>
        <th>
            <p>Ondertiteling:</p>
        </th>
        <th>
            <p>Lengte:</p>
        </th>
        <th>
            <p>Zaal:</p>
        </th>
        <th>
            <p>Leeftijd:</p>
        </th>
        <th>
            <p>Aanvangstijd:</p>
        </th>
        <th>
            <p>Eindtijd:</p>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*@Html.DisplayFor(modelItem => item.Movie.Image)*@
                <img src="data:image;base64,@System.Convert.ToBase64String(item.Movie.Image)" width="60" height="80" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Name)
            </td>
            <td>
                @if (item.Movie.Is3D == true)
                {
                    <p>3D</p>
                }
                else
                {
                    <p></p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.LanguageSub)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.RoomID)
            </td>
            <td>
                @if (item.Movie.Age == 16)
                {
                    <img src="~/Content/kijkwijzer-16.png" alt="16" height="25" width="25" />
                }
                else if (item.Movie.Age == 12)
                {
                    <img src="~/Content/kijkwijzer-12.png" alt="12" height="25" width="25" />
                }
                else if (item.Movie.Age == 6)
                {
                    <img src="~/Content/kijkwijzer-6.png" alt="6" height="25" width="25" />
                }
                else if (item.Movie.Age < 6)
                {
                    <img src="~/Content/kijkwijzer-AL.png" alt="AL" height="25" width="25" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeginTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                <button class="btn btn-success" type="button" onclick="location.href = '@Url.Action("ShowDetails", "UpcomingShow", new { id = item.ShowID}, null)'">Bekijk</button>
            </td>
        </tr>
    }

</table>
